  <section class="container-fluid ">
  <%= form_for @post, :html => {:class =>"form"}, :validate => true do |f| %>
  <section class="content-box">
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
  </section>
  <section class="author_name">
    <p>
      <%= f.label :blog_author %><br>
      <%= f.text_field :blog_author %>
    </p>
  </section>
  <section class="content-box">
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, :class =>"content-area" %>
    </p>
  </section>
  <footer class="form-bottom">

      <%= f.submit 'Submit', :class =>"btn btn-default"%>
      <%= link_to 'Go Back', posts_path, class: "btn btn-default" %>
  <% end %>
</footer>



</section>
