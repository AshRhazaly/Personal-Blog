
<% if @post.errors.any? %>
       <div id="error_explanation">
         <ul>
           <% @post.errors.full_messages.each do |msg| %>
             <div class="alert alert-danger alert-dismissable">
               <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
               <strong><%= msg %></strong>
             </div>
           <% end %>
         </ul>
       </div>
     <% end %>

<section class="container-fluid ">
  <%= form_for @post, :html => {:class =>"form"} do |f| %>
  <section class="content-box">
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
  </section>
  <section class="author_name">
    <p>
      <%= f.label :blog_author %><br>
      <%= f.text_field :blog_author %>
    </p>
  </section>
  <section class="content-box">
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, :class =>"content-area" %>
    </p>
  </section>
  <section>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  </section>
</section>
