<section class="container-fluid main-container">
<section class="container content-body">
<section class="container content-post">
<header class="blog-header">
  <strong>Title:</strong>
  <%= @post.title %>
</header>

<section class="blog-author">
  <strong>Author:</strong>
  <%= @post.blog_author %>
</section>

<section class="blog-content">
  <%= @post.content %>
</section>
<hr />
<section class="blog-content">
<strong>Comments</strong>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Name:</strong>
    <%= comment.name %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  <%= link_to 'Delete', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</section>
<hr />
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<%= link_to 'Add a new comment', new_post_comment_path(@post) %>
<span>&nbsp;</span>
<span class="glyphicon glyphicon-step-backward" aria-hidden="true"></span>
<%= link_to 'Back', posts_path %>
</section>
</section>


</section>
