<section class="container-fluid main-container">
  <section class="container content-body">
    <section class="container content-post">
      <% if flash[:notice] %>
             <div class="alert alert-success alert-dismissable">
               <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
               <strong><%= flash[:notice] %></strong>
             </div>
           <% end %>
      <article class="blog-post">
         <% @posts.each do |post| %>
         <header class="blog-header"><%= post.title %></header>
          <section class="blog-author">Posted by: <%= post.blog_author %></section>
          <section class="blog-content"><%= post.content %></section>
           <footer class="icons">
             <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
             <%= link_to 'Edit', edit_post_path(post) %>
             <span>&nbsp&nbsp&nbsp</span>
             <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <%= link_to 'Delete', post_path(post),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
           </footer>
         <% end %>
      </article>
      <footer class="page-footer">
        <a href="https://www.linkedin.com/in/ash-rhazaly-9445987b/" class="btn btn-social-icon-btn-lg btn-linkedin">
            <span class="fa fa-linkedin"></span>
        </a>
        <a href="https://github.com/AshRhazaly" class="btn btn-social-icon-btn-lg btn-github">
            <span class="fa fa-github"></span>
        </a>

      </footer>
    </section>
  </section>
</section>
